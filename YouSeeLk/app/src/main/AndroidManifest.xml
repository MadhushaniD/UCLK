<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uclk.shani.youseelk">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.HomeActivity" />
        <activity
            android:name=".activities.SignUpActivity"
            android:label="Sign Up" />
        <activity
            android:name=".activities.PreferencesActivity"
            android:label="Preferences" />
        <activity
            android:name=".activities.SelectLocationsActivity"
            android:label="Destinations" />
        <activity
            android:name=".activities.DurationActivity"
            android:label="Durations" />
        <activity
            android:name=".activities.MainTourActivity"
            android:label="Tour Schedule" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="Settings" />
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.UploadActivity" />
        <activity android:name=".activities.MyPlansActivity" />
        <activity
            android:name=".activities.FinalPlanActivity"
            android:label="Tour Plan" />
        <activity
            android:name=".activities.ViewActivity"
            android:label="View Panorama" />
        <activity android:name=".activities.SavedPlanView"></activity>
    </application>

</manifest>